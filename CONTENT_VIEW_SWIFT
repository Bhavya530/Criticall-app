import SwiftUI

struct ContentView: View {
    @State private var selectedRole = ""
    let roles = ["Doctor", "Lab Technician"]   // Updated roles
    @State private var userID = ""
    @State private var password = ""
    
    @State private var navigate = false
    
    var body: some View {
        NavigationStack {
            
            ZStack {
                // Dark gradient background
                LinearGradient(
                    gradient: Gradient(colors: [Color.black, Color(.darkGray)]),
                    startPoint: .top,
                    endPoint: .bottom
                )
                .ignoresSafeArea()
                
                VStack(spacing: 0) {
                    
                    Image("medcare_icon") // Replace with CritiCall icon if needed
                        .resizable()
                        .frame(width: 64, height: 64)
                        .padding(.top, 32)
                    
                    Text("CritiCall Portal")
                        .font(.title2)
                        .fontWeight(.semibold)
                        .foregroundColor(.white)
                        .padding(.top, 12)
                    
                    Text("Secure Healthcare Management System")
                        .font(.footnote)
                        .foregroundColor(.gray)
                        .padding(.top, 2)
                    
                    Spacer().frame(height: 22)
                    
                    VStack(alignment: .leading, spacing: 20) {
                        
                        Text("Sign In")
                            .font(.title3)
                            .fontWeight(.medium)
                            .foregroundColor(.white)
                        
                        Text("Access your healthcare dashboard")
                            .font(.footnote)
                            .foregroundColor(.gray)
                        
                        // Role Picker
                        VStack(alignment: .leading) {
                            Text("Role")
                                .font(.footnote)
                                .foregroundColor(.gray)
                            Picker("Select your role", selection: $selectedRole) {
                                Text("Select your role").tag("")
                                ForEach(roles, id: \.self) { role in
                                    Text(role).tag(role)
                                }
                            }
                            .pickerStyle(MenuPickerStyle())
                            .padding()
                            .background(Color(.systemGray5).opacity(0.15))
                            .cornerRadius(8)
                        }
                        
                        // User ID
                        VStack(alignment: .leading) {
                            Text("User ID").font(.footnote).foregroundColor(.gray)
                            TextField("Enter User ID", text: $userID)
                                .padding()
                                .background(Color(.systemGray5).opacity(0.15))
                                .cornerRadius(8)
                                .foregroundColor(.white)
                        }
                        
                        // Password
                        VStack(alignment: .leading) {
                            Text("Password").font(.footnote).foregroundColor(.gray)
                            SecureField("Enter your password", text: $password)
                                .padding()
                                .background(Color(.systemGray5).opacity(0.15))
                                .cornerRadius(8)
                                .foregroundColor(.white)
                        }
                        
                        // Sign In Button
                        Button(action: {
                            navigate = true
                        }) {
                            Text("Sign In to CritiCall")
                                .foregroundColor(.white)
                                .frame(maxWidth: .infinity)
                                .padding()
                                .background(Color.teal)
                                .cornerRadius(8)
                        }
                        
                        // Forgot password
                        Button("Forgot your password?") { }
                            .font(.footnote)
                            .foregroundColor(.teal)
                        
                        // (Security note removed)
                    }
                    .padding()
                    .background(Color(.systemGray6).opacity(0.12))
                    .cornerRadius(20)
                    .shadow(color: Color(.black), radius: 6, x: 0, y: 4)
                    .padding(.top, 18)
                    
                    Spacer()
                    
                    Text("Â© 2024 CritiCall Portal. All rights reserved.")
                        .font(.caption2)
                        .padding(.bottom, 12)
                        .foregroundColor(.gray)
                }
                .padding(.horizontal)
                .navigationDestination(isPresented: $navigate) {
                    SignupScreen()
                }
            }
        }
    }
}

struct ContentView_Previews: PreviewProvider {
    static var previews: some View {
        ContentView()
            .preferredColorScheme(.dark)
    }
}

